# Welcome to Sonic Pi
# Sonic pi is acreative programming environemnt that lets you convert your code into music 

live_loop :doodle do
  use_random_seed 1234
  2.times do
    sync :beats
    with_fx :slicer do
      4.times do
        play scale(:c4, :minor_pentatonic).choose
        sleep [0.125, 0.25, 0.5].choose
      end
    end
  end
end
live_loop :beats do
  sample :loop_amen, beat_stretch: 2
  sleep 2
end

live_loop :doodle do
  use_random_seed 1234
  2.times do
    sync :beats
    with_fx :slicer do
      4.times do
        play scale(:c4, :minor_pentatonic).choose
        sleep [0.125, 0.25, 0.5].choose
      end
    end
  end
end
m = [
  chord(:A3, :minor),
  chord(:F3, :major),
  chord(:C3, :major),
  chord(:G3, :major)
].ring
use_synth :piano
play_chord chord(:e4, :major)
sleep 1
live_loop :chords do
  use_synth :beep
  c = m.tick
  play_pattern_timed c, 0.125, release: 1
  sleep 1-3*0.125
end
use_synth :piano
play_chord chord(:e4, :major)
sleep 1
play_pattern_timed scale(:c4, :major_pentatonic), [0.125, 0.25]

play_pattern_timed scale(:c4, :major_pentatonic), 0.125
live_loop :doodle do
  with_fx :slicer do
    play scale(:c4, :minor_pentatonic).choose
    sleep [0.125, 0.25, 0.5].choose
  end
end
live_loop :boom do
  sync :drums
  sample :bd_boom
  sleep 4
end
live_loop :chords do
  use_synth :beep
  c = m.tick
  play_pattern_timed c, 0.125, release: 1
  sleep 1-3*0.125
end
